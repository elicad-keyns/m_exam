<Window x:Class="m_exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:m_exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Button Name="bInsert" Uid="Insert" Grid.Row="0" Grid.Column="0" Margin="4" Content="Insert" Click="Button_Click"/>
        <Button Name="bUpdate" Uid="Update" Grid.Row="0" Grid.Column="1" Margin="4" Content="Update" Click="Button_Click"/>
        <Button Name="bDelete" Uid="Delete" Grid.Row="0" Grid.Column="2" Margin="4" Content="Delete" Click="Button_Click"/>

        <Frame Name="fMain" NavigationUIVisibility="Hidden" Margin="0,42,-0.4,0" Grid.RowSpan="2" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
